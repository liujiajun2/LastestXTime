<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:layout_width="fill_parent"  android:layout_marginLeft="10dip"
        android:layout_height="60dip">

        <ImageView android:id="@+id/xtFunctionIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"></ImageView>

        <TextView android:id="@+id/xtFunctionLabel" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip" android:text="Label" android:textSize="18dp"
            android:layout_marginStart="36dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/xtFunctionIcon"></TextView>
    </RelativeLayout>
</LinearLayout>
