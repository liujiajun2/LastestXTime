<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/back_anlayzemessage"></include>
    <TextView
        android:text="肯定关键词："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="55dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <Switch
        android:layout_height="50dp"
        android:id="@+id/switchAnalyzeMessage"
        android:textOff="关闭"
        android:textOn="开启"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_width="130dp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/noKeyWordEditText"
        android:layout_alignRight="@+id/noKeyWordEditText"
        android:layout_alignEnd="@+id/noKeyWordEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/noKeyWordEditText"
        android:layout_below="@+id/yesKeyWordEditText"
        android:layout_alignLeft="@+id/yesKeyWordEditText"
        android:layout_alignStart="@+id/yesKeyWordEditText"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="否定关键词："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/noKeyWordEditText"
        android:layout_alignBottom="@+id/noKeyWordEditText"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/yesKeyWordEditText"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
</RelativeLayout>